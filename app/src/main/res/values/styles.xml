<resources>

    <style name="BaseTheme" parent="Theme.AppCompat">
        <!-- Here we setting appcompat’s actionBarStyle -->
        <item name="windowActionBar">false</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- ...and here we setting appcompat’s color theming attrs -->
        <item name="android:textColorPrimary">@color/meneame_text_color</item>
        <item name="colorPrimary">@color/meneame_orange</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="colorAccent">@color/meneame_orange</item>

        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BaseTheme">
    </style>

</resources>
